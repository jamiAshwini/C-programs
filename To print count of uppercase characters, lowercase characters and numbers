#include<stdio.h>
#include<string.h>
void main(){
	char str[100];
	int i,u=0,l=0,n=0,size;
	scanf("%s",&str);
	size=strlen(str);
	for(i=0;i!=size;i++){
		if(isupper(str[i])){
			u++;
		}
		else if(islower(str[i])){
			l++;
		}
		else if(isdigit(str[i])){
			n++;
		}
	}
	 printf("Count of uppercase characters:%d\n",u);
	 printf("Count of lowercase characters:%d\n",l);
	 printf("Count of numbers:%d",n);
}

Input:Aditya@123
Output:
Count of uppercase characters:1
Count of lowercase characters:5
Count of numbers:3
